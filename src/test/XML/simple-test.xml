<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="DemoQA Suite Sequentially">


    <parameter name="dragDropPageUrl" value="https://demoqa.com/dragabble"/>
    <parameter name="uploadDownloadUrl" value="https://demoqa.com/upload-download"/>
    <parameter name="implicit.wait" value="30"/>

    <listeners>
        <listener class-name="listeners.TestListener"/>
    </listeners>

    <test name="ChromeTests">
        <parameter name="browser" value="chrome"/>
        <parameter name="headless" value="false"/>
        <classes>
            <class name="tests.DraggableTest"/>
            <class name="tests.UploadDownloadTest"/>
        </classes>
    </test>

    <test name="FirefoxTests">
        <parameter name="browser" value="firefox"/>
        <parameter name="headless" value="false"/>
        <classes>
    <class name="tests.DraggableTest"/>
    <class name="tests.UploadDownloadTest"/>
        </classes>
    </test>

    <test name="EdgeTests">
        <parameter name="browser" value="edge"/>
        <parameter name="headless" value="false"/>
        <classes>
            <class name="tests.DraggableTest"/>
            <class name="tests.UploadDownloadTest"/>
        </classes>
    </test>
</suite>
