<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="DemoQA Suite" parallel="methods" thread-count="2">

    <parameter name="browserWindowsUrl" value="https://demoqa.com/browser-windows"/>
    <parameter name="uploadDownloadUrl" value="https://demoqa.com/upload-download"/>
    <parameter name="implicit.wait" value="30"/>

        <listeners>
            <listener class-name="listeners.TestListener"/>
        </listeners>

        <test name="Client Test on Chrome" parallel="methods">
            <parameter name="browser" value="chrome"/>
            <parameter name="headless" value="false"/>
            <classes>
                <class name="tests.BrowserWindowsTest"/>
                <class name="tests.UploadDownloadTest"/>
            </classes>
        </test>

    </suite>